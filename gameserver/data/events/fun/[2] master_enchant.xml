<!DOCTYPE list SYSTEM "events.dtd">
<list>
	<!--формат даты HH:mm dd.MM.yyyy-->
	<event id="2" name="Master Enchanting" impl="Fun">
		<parameter name="start-pattern" value="18:00 08.04.2012" />
		<parameter name="stop-pattern" value="18:15 21.04.2012" />
		<parameter name="staff_price" value="1000" />
		<parameter name="scroll_price" value="77777" />
		<parameter name="timed_scroll_number" value="24" />
		<parameter name="timed_scroll_hours" value="6" />
		<parameter name="timed_scroll_price" value="6000" />
		<on_start>
			<spawn name="spawn_group" />
			<global_add_reward name="droplist" />
