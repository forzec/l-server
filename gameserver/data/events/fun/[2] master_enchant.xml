		<on_stop>
			<despawn name="spawn_group" />
			<global_remove_reward name="droplist" />
		</on_stop>
		<objects name="spawn_group">
			<spawn_ex name="master_enchant_ev_manager" />
		</objects>
		<objects name="droplist">
			<rewardlist type="EVENT">
				<reward item_id="13540" min="1" max="1" chance="12.0000" />	<!--Yogi's Enchant Scroll-->
			</rewardlist>
		</objects>
	</event>
</list>